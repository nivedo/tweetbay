.title-wrap
  .profile-header
    %h1 #{current_user.name}'s Profile
.profile-container
  = form_for(@user, :html => { :class => 'form-fields' }) do |f|
    %fieldset
      .input-row
        %label Name
        = f.text_field :name, :readonly => true
      .input-row
        %label Twitter Nickname
        = f.text_field :nickname, :readonly => true
      .input-row
        %label Email
        = f.text_field :email, :placeholder => "you@example.com"
      = f.submit "Update", :class => "submit"
