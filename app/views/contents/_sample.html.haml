.add-product-wrap
  //.input-image#dropzone
  //  Add a photo or image
  %form#media-dropzone.dropzone{:action => "/image_contents", :enctype => "multipart/form-data"}
    .dz-message{"data-dz-message" => ""}
      .camera-icon
      %span Add a photo, image, or meme
    %input{:name => "authenticity_token", :type => "hidden", :value => form_authenticity_token}
    .fallback
      %input{:name => "media", :type => "file"}
  = form_tag("/", :html => { :class => 'form-fields' }) do |f|
    %fieldset
      = hidden_field_tag :image_src, :id => "content-image"
      = hidden_field_tag :parent_id
      .input-row
        .col3
          = text_field_tag :title, nil, { :placeholder => "What are you selling?", :class => "title req" }
        .col1
          %span.dollar $
          = number_field_tag :price, nil, { :placeholder => "0.00", :step => "any", :class => "price req" }
      .input-row
        = text_area_tag :description, nil, { :placeholder => "Tell us more.  Why will people love it? 😍", :class => "req" }
      = submit_tag "Preview Tweet", :class => "submit-populate", :id => "populate"
.modal-wrapper#modal-wrapper
  .inner-preview
    = render "preview", :content => @content
